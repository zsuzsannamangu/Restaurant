@using BestRestaurant.Models;

<h1>My Favorite Restaurants</h1>
<ul>

@if (Model.Count == 0)
{
  <p>There are no restaurants here!</p>
}
@if(Model.Count != 0)
{
  @foreach (Restaurant restaurant in Model)
  {
    <li><a href="/restaurant/:@restaurant.Id">@restaurant.Name</a></li>
    <li>Address: @restaurant.Address</li>
    <li>Phone Number: @restaurant.PhoneNumber</li>
    <br>
  }
}

</ul>
<a href="/restaurant/new">Add a new restaurant</a>
